# for Tcl script use only
set     appname         make
set     version         4.1
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin
set     data_root       ${prefix}/share
set     url             "https://www.gnu.org/software/make"
set     msg             "GNU Make is a tool which controls the generation of executables and other non-source files of a program from the program's source files.\nGNU Make official site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH        ${exec_prefix}
prepend-path    MANPATH     ${data_root}/man

