# for Tcl script use only
set     appname         sailfish
set     version         0.9.2
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin
set     url             "http://www.cs.cmu.edu/~ckingsf/software/sailfish"
set     msg             "Rapid Mapping-based Isoform Quantification from RNA-Seq Reads.\nSailfish official site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH                ${exec_prefix}
prepend-path    LD_LIBRARY_PATH     ${prefix}/lib

