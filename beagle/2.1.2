# for Tcl script use only
set     appname         beagle
set     version         2.1.2
set     prefix          /export/apps/${appname}/${version}
set     url             "https://github.com/beagle-dev/beagle-lib"
set     msg             "BEAGLE is a high-performance library that can perform the core calculations at the heart of most Bayesian and Maximum Likelihood phylogenetics packages.\nBEAGLE official site: $url\n"

conflict	$appname

module-whatis $msg

prepend-path    LD_LIBRARY_PATH    ${prefix}/lib

