# for Tcl script use only
set     appname         shannon
set     version         0.0.2
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/
set     url             "https://sreeramkannan.github.io/Shannon/"
set     msg             "Shannon is a program for assembling transcripts from RNA-Seq data.\nShannon official site: $url\n"

conflict	$appname

module-whatis $msg

# shannon requires python/2.7.8, jellyfish/2.2.6, metis/5.1.0, quorum/1.1.1
if { ![is-loaded python/2.7.8] } {
    module load python/2.7.8
}
if { ![is-loaded jellyfish/2.2.6] } {
    module load jellyfish/2.2.6
}
if { ![is-loaded metis/5.1.0] } {
    module load metis/5.1.0
}
if { ![is-loaded quorum/1.1.1] } {
    module load quorum/1.1.1
}

prepend-path    PATH                ${exec_prefix}

