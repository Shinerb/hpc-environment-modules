# for Tcl script use only
set     appname         changeo
set     version         0.3.3
set     prefix          /export/apps/${appname}/${version}
set     url             "http://changeo.readthedocs.io/en/latest/overview.html"
set     msg             "Change-O is a collection of tools for processing the output of V(D)J alignment tools, assigning clonal clusters to immunoglobulin sequences, and reconstructing germline sequences.\Change-O official site: $url\n"

conflict	$appname

module-whatis $msg

# changeo/0.3.3 requires python/3.4.3
if { ![is-loaded python] } {
    module load python/3.4.3
}

prepend-path    PATH            ${prefix}/bin

