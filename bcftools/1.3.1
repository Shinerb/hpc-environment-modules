module-whatis   "loads the bcftools package"

# for Tcl script use only
set     appname         bcftools
set     version         1.3.1
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin
set     datarootdir     ${prefix}/share
set     url             "https://samtools.github.io/bcftools/"
set     msg             "Reading/writing BCF2/VCF/gVCF files and calling/filtering/summarising SNP and short indel sequence variants.\nBCFtools official site: $url\n"

conflict	bcftools

# bcftools/1.3.1 is built on htslib/1.3.2
if { ![is-loaded htslib/1.3.2] } {
    module load htslib/1.3.2
}

prepend-path    PATH            ${exec_prefix}
prepend-path    MANPATH         ${datarootdir}/man
